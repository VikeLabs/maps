{
    "name": "svelte-app",
    "version": "1.0.0",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public",
        "validate": "svelte-check",
        "test": "jest",
        "generate": "openapi --input \"../api/src/test/resources/openapi.json\" --output ./dist --client fetch"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.11.5",
        "@rollup/plugin-commonjs": "^14.0.0",
        "@rollup/plugin-node-resolve": "^8.0.0",
        "@rollup/plugin-typescript": "^8.3.0",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/svelte": "^3.0.0",
        "@tsconfig/svelte": "^1.0.0",
        "@types/jest": "^26.0.14",
        "@types/leaflet": "^1.7.6",
        "@types/node": "16.11.10",
        "babel-jest": "^26.5.2",
        "jest": "^26.5.2",
        "openapi-typescript-codegen": "^0.11.8",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^6.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "svelte-check": "^2.2.10",
        "svelte-jester": "^1.8.2",
        "svelte-preprocess": "^4.0.0",
        "ts-jest": "^26.4.1",
        "tslib": "^2.3.1",
        "typescript": "^4.5.2"
    },
    "dependencies": {
        "leaflet": "^1.7.1",
        "sirv-cli": "^1.0.0"
    },
    "jest": {
        "transform": {
            "^.+\\.svelte$": [
                "svelte-jester",
                {
                    "preprocess": true
                }
            ],
            "^.+\\.js$": "babel-jest",
            "^.+\\.ts$": "ts-jest"
        },
        "moduleFileExtensions": [
            "js",
            "ts",
            "svelte"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ]
    }
}
