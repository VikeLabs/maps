{
    "info": {
        "title": "map uvic",
        "version": "0.0.1",
        "description": "An API for navigating around the University of Victoria."
    },
    "tags": [
    ],
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "The greatest server!"
        }
    ],
    "paths": {
        "/ping": {
            "get": {
                "summary": "Returns 200 OK and a small json object describing the server status.",
                "description": "A handy endpoint for checking to see weather the server is alive and replying.",
                "tags": [
                    ""
                ],
                "parameters": [
                ],
                "responses": {
                    "200": {
                        "description": "a successful ping!",
                        "content": {
                            "application/json": {
                                "example": {
                                    "success": true
                                },
                                "schema": {
                                    "$ref": "#/components/schemas/PingResponseBody"
                                }
                            }
                        }
                    }
                },
                "security": [
                ],
                "operationId": "getPing",
                "deprecated": false
            }
        },
        "/route": {
            "get": {
                "summary": "Gives a path from `from` to `to`",
                "description": "Determines a reasonable but unoptimized route between two points",
                "tags": [
                    ""
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "number"
                        },
                        "in": "query",
                        "name": "fromLatitude",
                        "required": true
                    },
                    {
                        "schema": {
                            "type": "number"
                        },
                        "in": "query",
                        "name": "fromLongitude",
                        "required": true
                    },
                    {
                        "schema": {
                            "type": "number"
                        },
                        "in": "query",
                        "name": "toLatitude",
                        "required": true
                    },
                    {
                        "schema": {
                            "type": "number"
                        },
                        "in": "query",
                        "name": "toLongitude",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "example": {
                                    "points": [
                                        {
                                            "latitude": 1,
                                            "longitude": 2
                                        },
                                        {
                                            "latitude": 2,
                                            "longitude": 2
                                        }
                                    ]
                                },
                                "schema": {
                                    "$ref": "#/components/schemas/RouteResponseBody"
                                }
                            }
                        }
                    }
                },
                "security": [
                ],
                "operationId": "getRoute",
                "deprecated": false
            }
        },
        "/search": {
            "get": {
                "summary": "searches the UVic campus based on a single search string",
                "description": "searches for buildings with a levenshteinDistance of 1 to the query string",
                "tags": [
                    ""
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "string"
                        },
                        "in": "query",
                        "name": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "a single result",
                        "content": {
                            "application/json": {
                                "example": {
                                    "results": [
                                        {
                                            "name": "Elliott Building",
                                            "center": {
                                                "latitude": 48.4627526,
                                                "longitude": -123.3108017
                                            }
                                        }
                                    ]
                                },
                                "schema": {
                                    "$ref": "#/components/schemas/SearchResponseBody"
                                }
                            }
                        }
                    }
                },
                "security": [
                ],
                "operationId": "getSearch",
                "deprecated": false
            }
        },
        "/suggest": {
            "get": {
                "summary": "lists possible completions for a given string",
                "description": "Similar to search but doesn't use levenshteinDistance, instead just scanning the start of buildings \nand their abbreviations, it is however ordered by levenshteinDistance, capitalization are ignored \nfor suggestions but included for sorting.",
                "tags": [
                    ""
                ],
                "parameters": [
                    {
                        "schema": {
                            "type": "string"
                        },
                        "in": "query",
                        "name": "query",
                        "required": true,
                        "description": "The query string the user has started typing"
                    },
                    {
                        "schema": {
                            "type": "integer"
                        },
                        "in": "query",
                        "name": "max",
                        "required": false,
                        "description": "The max number of results returned."
                    }
                ],
                "responses": {
                    "200": {
                        "description": "a list of suggested search terms",
                        "content": {
                            "application/json": {
                                "example": {
                                    "suggestions": [
                                        "ECS",
                                        "Elliot Building"
                                    ]
                                },
                                "schema": {
                                    "$ref": "#/components/schemas/SuggestResponseBody"
                                }
                            }
                        }
                    }
                },
                "security": [
                ],
                "operationId": "getSuggest",
                "deprecated": false
            }
        }
    },
    "components": {
        "schemas": {
            "PingResponseBody": {
                "properties": {
                    "success": {
                        "example": true,
                        "type": "boolean"
                    }
                },
                "example": {
                    "success": true
                },
                "type": "object",
                "required": [
                    "success"
                ]
            },
            "SearchResponseBody": {
                "properties": {
                    "results": {
                        "items": {
                            "$ref": "#/components/schemas/SearchResponseBodyBuilding"
                        },
                        "example": [
                            {
                                "name": "Elliott Building",
                                "center": {
                                    "latitude": 48.4627526,
                                    "longitude": -123.3108017
                                }
                            }
                        ],
                        "type": "array"
                    }
                },
                "example": {
                    "results": [
                        {
                            "name": "Elliott Building",
                            "center": {
                                "latitude": 48.4627526,
                                "longitude": -123.3108017
                            }
                        }
                    ]
                },
                "type": "object",
                "required": [
                    "results"
                ]
            },
            "SearchResponseBodyBuilding": {
                "properties": {
                    "name": {
                        "example": "Elliott Building",
                        "type": "string"
                    },
                    "center": {
                        "$ref": "#/components/schemas/Coordinate"
                    }
                },
                "example": {
                    "name": "Elliott Building",
                    "center": {
                        "latitude": 48.4627526,
                        "longitude": -123.3108017
                    }
                },
                "type": "object",
                "required": [
                    "center",
                    "name"
                ]
            },
            "Coordinate": {
                "properties": {
                    "latitude": {
                        "example": 1,
                        "type": "number"
                    },
                    "longitude": {
                        "example": 2,
                        "type": "number"
                    }
                },
                "example": {
                    "latitude": 1,
                    "longitude": 2
                },
                "type": "object",
                "required": [
                    "latitude",
                    "longitude"
                ]
            },
            "SuggestResponseBody": {
                "properties": {
                    "suggestions": {
                        "items": {
                            "type": "string"
                        },
                        "example": [
                            "ECS",
                            "Elliot Building"
                        ],
                        "type": "array"
                    }
                },
                "example": {
                    "suggestions": [
                        "ECS",
                        "Elliot Building"
                    ]
                },
                "type": "object",
                "required": [
                    "suggestions"
                ]
            },
            "RouteResponseBody": {
                "properties": {
                    "points": {
                        "items": {
                            "$ref": "#/components/schemas/Coordinate"
                        },
                        "example": [
                            {
                                "latitude": 1,
                                "longitude": 2
                            },
                            {
                                "latitude": 2,
                                "longitude": 2
                            }
                        ],
                        "type": "array"
                    }
                },
                "example": {
                    "points": [
                        {
                            "latitude": 1,
                            "longitude": 2
                        },
                        {
                            "latitude": 2,
                            "longitude": 2
                        }
                    ]
                },
                "type": "object",
                "required": [
                    "points"
                ]
            }
        },
        "securitySchemes": {
        }
    },
    "openapi": "3.0.0"
}